.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 35px;
  height: 35px;
  display: flex;
  white-space: nowrap;
  padding-bottom: 5px;
  border-bottom: 1px rgb(216, 215, 215) solid;
}

.tab-item {
  margin: 0 2px 0 2px;
  font-size: 15px;
  display: inline-block;
  color: #777;
  width: 80px;
}

.on {
  color: #777;
  font-size: 18px;
  font-weight: bold;
  border-radius: 5px;
  background-color: rgb(231, 226, 227);
}
.ad{
  display: block;
  width: 98%;
  margin: 0 auto; 
}
.swiper-item{
  height: 100%;
  width: 100%;
}
.slide-image {
  margin-top: 5px;
  width: 100%;
  height: 100%;
  border-radius:5%; 
}

.category {
  height: 100px;
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: row;
  margin: 10px 0 0 0;
}

.category .item {
  width: 40px;
  height: 60px;
  flex: 1;
  margin: 0 5px 0 5px;
}

.category .item .image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.category .item .font {
  font-family: "Times New Roman", Georgia, Serif;
  font-size: 15px;
  color: black;
}

.line {
  width: 100%;
  height: 10px;
  background-color: rgb(224, 221, 221);
}
.evidence{
  display: flex;
  flex-direction: row;
}
.evidence image{
  display: inline-block;
  width: 80px;
  height: 100px;
}
.hot {
  width: 100%;
}

.hot .title {
  font-family: "Times New Roman", Georgia, Serif;
  margin: 5px;
  font-size: 20px;
  color: rgb(117, 116, 116);
}

.hot .item-v {
  margin: 5px 0 0 5px;
  display: flex;
  white-space: nowrap;
}

.hot .item-v .item {
  display: inline-block;
  width: 130px;
  height: 190px;
  margin: 0 5px 0 5px;
  border: 1px rgb(243, 240, 240) solid;
  border-radius: 5px;
}

.hot .item-v .item .item-image {
  width: 130px;
  height: 130px;
  border-radius: 5px;
}

.hot .item-v .item .name {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 13px;
  font-family: "Times New Roman", Georgia, Serif;
}

.hot .item-v .item .cart {
  width: 30px;
  height: 30px;
  float: right;
  border-radius: 50%;
}

.hot .item-v .item  .price {
  color: red;
  font-size: 13px;
  line-height: 30px;
}

.explode {
  width: 100%;
}

.explode .title {
  font-family: "Times New Roman", Georgia, Serif;
  margin: 5px;
  font-size: 20px;
  color: rgb(117, 116, 116);
}

.explode .item-v{
  margin: 5px 0 0 5px;
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  align-content:flex-start;
}

.explode .item-v .item {
  display: inline-block;
  width: 46%;
  height: 210px;
  margin: 0 5px 65px 5px;
  border: 1px rgb(243, 240, 240) solid;
  border-radius: 5px;
}
.explode .item-v .item .item-image {
  width: 100%;
  height:  100%;
  border-radius: 5px;
}

.explode .item-v .item .name {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 13px;
  font-family: "Times New Roman", Georgia, Serif;
}

.explode .item-v .item .cart {
  width: 30px;
  height: 30px;
  float: right;
  border-radius: 50%;
}

.explode .item-v .item  .price {
  color: red;
  font-size: 13px;
  line-height: 30px;
}
.commodity_screen {
  width: 20px;
  height: 20px;
  position: fixed;
  display: block;
  background:  rgb(7, 238, 7);
  z-index: 1000;
  border-radius: 5%;
}